<div class="container">
  <div class="row">
    <div class="col">
    </div>
    <div class="col-6" style="background-color: lightgray; padding: 1%;">
      <h2><%= t :create_account %></h2>

      <form>
      <%= form_for(resource, as: @user, url: registration_path(@user)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <%-# Email -%>
        <div class="field form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <%-# First_name -%>
        <div class="field form-group">
          <%= f.label :first_name %><br />
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
        </div>
        
        <%-# Last_name -%>
        <div class="field form-group">
          <%= f.label :last_name %><br/>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
        </div>

        <div class="field form-group">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="d-flex justify-content-between w-100">
          <%= render "devise/shared/links" %>
          <div class="actions">
            <%= f.submit "Sign up" %>
          </div>
        </div>
      <% end %>
    </form>
      
    </div>
    <div class="col">
    </div>
  </div>
</div>
